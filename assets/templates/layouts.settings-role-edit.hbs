<div class="mode-context">
    <header class="mode-context-header">
        <a href="timeline.html" class="mode-context-back button button-link">
            <svg class="iconic">
                <use xlink:href="../../img/material/svg-sprite-navigation-symbol.svg#ic_arrow_back_24px"></use>
            </svg>
            <span class="hidden">Back</span>
        </a>

        <h1 class="mode-context-title">Edit role</h1>

        <!--// SAVED //-->
        <span class="status-indicator tooltip success">
            <svg class="iconic">
                <use xlink:href="../../img/iconic-sprite.svg#check"></use>
            </svg>
            <span class="label">Changes saved</span>
            <span class="bug">Every change you make is automatically saved. Last saved 2 minutes ago.</span>
        </span>

        <!--// SAVING //
        <span class="status-indicator">
            <span class="label">Saving...</span>
        </span>
        //-->

        <!--// UNSAVED //
        <span class="status-indicator error" data-message="failed-save">
            <svg class="iconic">
                <use xlink:href="../../img/iconic-sprite.svg#warning"></use>
            </svg>
            <span class="label">Unsaved changes</span>
        </span>
        //-->
    </header>
</div>

<main role="main">

    <div class="main-col">

        <div class="form-sheet">
            <div class="form-field title">
                <label class="hidden">Name</label>
                <input type="text" placeholder="Untitled role" value="Editor" />
            </div>

            <div class="form-field">
                <label>Description</label>
                <textarea>Vestibulum faucibus efficitur erat. Mauris varius mollis consectetur. Ut et sem ut lacus rutrum dignissim.</textarea>
            </div>

            <fieldset>
                <legend>Permissions</legend>

                <div class="form-field checkbox">
                    <label for="surveys">
                        <input type="checkbox" id="surveys">
                        Add, edit, and delete <strong>surveys &amp; tasks</strong>
                    </label>
                </div>
                <div class="form-field checkbox">
                    <label for="categories">
                        <input checked type="checkbox" id="categories">
                        Add, edit, and delete <strong>categories</strong>
                    </label>
                </div>
                <div class="form-field checkbox">
                    <label for="sources">
                        <input type="checkbox" id="sources">
                        Add, edit, and delete <strong>data sources</strong>
                    </label>
                </div>
                <div class="form-field checkbox">
                    <label for="users">
                        <input type="checkbox" id="users">
                        Add, edit, and delete <strong>users</strong>
                    </label>
                </div>
                <div class="form-field checkbox">
                    <label for="posts-edit">
                        <input checked type="checkbox" id="posts-edit">
                        Edit and delete <strong>responses</strong>
                    </label>
                </div>
                <div class="form-field checkbox">
                    <label for="posts-import">
                        <input checked type="checkbox" id="posts-import">
                        Import <strong>responses</strong>
                    </label>
                </div>
            </fieldset>
        </div>

    </div>

</main>

{{> Modals }}
