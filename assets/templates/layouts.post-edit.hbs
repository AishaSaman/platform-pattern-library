{{> ModeBar }}

{{#with (lookup deployment.posts 0)}} <!--// Choose the post index that will be the context for this tenplate //-->
<div class="mode-context">

    <header class="mode-context-header">
        {{#deployment}}
        <ol class="breadcrumbs">
            <li><a href="map.html">{{name}}</a></li>
        </ol>
        {{/deployment}}

        {{#postSurvey}}
        <h1 class="mode-context-title">{{name}}</h1>
        {{/postSurvey}}
    </header>

    <span class="mode-context-trigger">
        <svg class="iconic">
            <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
        </svg>
        <span class="label hidden">Show more/less</span>
    </span>

    <div class="mode-context-body">
        {{#postSurvey}}
        <p>{{description}}</p>
        {{/postSurvey}}
    </div>

</div>

<main role="main">

    <div class="toolbar">
        <div class="button-group">
            <button type="button" class="button-flat">Cancel</button>
            <button type="button" class="button-alpha">Save</button>
        </div>
    </div>

    <div class="main-col">

        <div class="form-sheet">
            {{postBand}}
            <div class="form-field form-field-adapt title">
                <label>Title</label>
                <input type="text" value="{{title}}">
            </div>

            <div class="toolbox">
                <h2 class="toolbox-heading">Tasks</h2>
                <div class="task">
                    <div class="form-field checkbox">
                        <label for="task-draft">
                            <input type="checkbox" id="task-draft" checked />
