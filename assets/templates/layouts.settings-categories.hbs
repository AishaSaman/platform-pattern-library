{{> ModeBar }}

<div class="mode-context">

    <header class="mode-context-header">
        <ol class="breadcrumbs">
            <li><a href="map.html">{{deployment.name}}</a></li>
            <li><a href="settings.html">Settings</a></li>
        </ol>

        <h1 class="mode-context-title">Categories</h1>
    </header>

    <span class="mode-context-trigger">
        <svg class="iconic">
            <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
        </svg>
        <span class="label hidden">Show more/less</span>
    </span>

    <div class="mode-context-body">

    </div>
</div>

<main role="main">

    <div class="toolbar">
        <div class="fab">
            <button type="button" class="button-alpha button-fab">
                <svg class="iconic">
                  <use xlink:href="../../img/iconic-sprite.svg#plus"></use>
                </svg>
                <span class="hidden">Add</span>
            </button>
        </div>
    </div>

    <div class="full-col">
        <div class="listing card">
            <div class="listing-item">
                <div class="listing-item-select">
                    <input type="checkbox">
                </div>
                <div class="listing-item-secondary">
                    <button class="button-beta button-flat" data-modal="delete-post">
                        <svg class="iconic">
                            <use xlink:href="../../img/iconic-sprite.svg#trash"></use>
                        </svg>
                        <span class="hidden">Delete</span>
                    </button>
                </div>

                <div class="listing-item-primary">
                    <h2 class="listing-item-title"><a href="settings-category-edit.html">Surface issues</a></h2>
                    <p class="listing-item-languages">Languages: English (default), Chinese, Swahili</p>

                </div>
            </div>
            <div class="listing-item">
                <div class="listing-item-select">
                    <input type="checkbox">
                </div>
                <div class="listing-item-secondary">
                    <button class="button-beta button-flat" data-modal="delete-post">
                        <svg class="iconic">
                            <use xlink:href="../../img/iconic-sprite.svg#trash"></use>
                        </svg>
                        <span class="hidden">Delete</span>
                    </button>
                </div>

                <div class="listing-item-primary">
                    <h2 class="listing-item-title"><a href="settings-category-edit.html">Signage</a></h2>
                    <p class="listing-item-languages">Languages: English (default), Swedish, Russian</p>
                </div>
            </div>
            <div class="listing-item child-listing-item">
                    <div class="listing-item-select">
                        <input type="checkbox">
                    </div>

                    <div class="listing-item-secondary">
                        <button class="button-beta button-flat" data-modal="delete-post">
                            <svg class="iconic">
                                <use xlink:href="../../img/iconic-sprite.svg#trash"></use>
                            </svg>
                            <span class="hidden">Delete</span>
                        </button>
                    </div>

                    <div class="listing-item-primary">
                        <h2 class="listing-item-title"><a href="">Broken</a></h2>
                        <p class="listing-item-languages">Languages: English (default)</p>
                    </div>
                </div>
                <div class="listing-item child-listing-item">
                    <div class="listing-item-select">
                        <input type="checkbox">
                    </div>

                    <div class="listing-item-secondary">
                        <button class="button-beta button-flat" data-modal="delete-post">
                            <svg class="iconic">
                                <use xlink:href="../../img/iconic-sprite.svg#trash"></use>
                            </svg>
                            <span class="hidden">Delete</span>
                        </button>
                    </div>

                    <div class="listing-item-primary">
                        <h2 class="listing-item-title"><a href="settings-category-edit.html">Missing</a></h2>
                        <p class="listing-item-languages">Languages: English (default), Swahili, French</p>
                    </div>
                </div>
                <div class="listing-item">
                <div class="listing-item-select">
                    <input type="checkbox" />
                </div>

                <div class="listing-item-secondary">
                    <button class="button-beta button-flat" data-modal="delete-post">
                        <svg class="iconic">
                            <use xlink:href="../../img/iconic-sprite.svg#trash"></use>
                        </svg>
                        <span class="hidden">Delete</span>
                    </button>
                </div>

                <div class="listing-item-primary">
                    <h2 class="listing-item-title"><a href="settings-category-edit.html">Obstructions</a></h2>
                    <p class="listing-item-languages">Languages: English (default), Italian, Farsi</p>
                </div>
            </div>
        </div>
    </div>
</main>

{{> Modals }}
