<div id="login" class="modal">
    <div class="modal-window">

        <h3 class="modal-title">Log into a deployment</h3>

        <div class="modal-body">

            <div class="form-field url">
                <label>Deployment URL</label>
                <p>All lowercase, no spaces</p>
                <input type="url" placeholder="deployment-url" />
                <em class="domain">.ushahidi.io</em>
            </div>

        </div>

        <div class="modal-actions">
            <button type="button" class="button-gamma modal-trigger">Cancel</button>
            <button type="button" class="button-alt modal-trigger">Go to deployment</button>
        </div>

    </div>

    <div class="modal-overlay"></div>
</div>

 <script>
 setTimeout(function() {
    modalToggle('#login');
 }, 1000);
 </script>
