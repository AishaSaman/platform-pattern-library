            </div>

            <!--// Description //-->
            <div class="form-field switch">
                <label>Show field description</label>
                <div class="toggle-switch">
                    <input class="tgl" id="show-field-description-3" type="checkbox" checked data-fieldgroup-toggle="field-description-3" />
                    <label class="tgl-btn" for="show-field-description-3"></label>
                </div>

                <div class="form-field" data-fieldgroup-target="field-description-3">
