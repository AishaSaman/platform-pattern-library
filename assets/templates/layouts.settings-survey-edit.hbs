                        <div class="divider"></div>

                        <div class="form-field radio">
                            <label for="custom-assigned-members">
                                <input type="radio" name="custom-assigned" id="custom-assigned-members" />
                                Members
                            </label>
                        </div>

                        <div class="form-field radio">
