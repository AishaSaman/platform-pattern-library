{{> ModeBar }}

<div class="mode-context">

    <header class="mode-context-header">
        <ol class="breadcrumbs">
            <li><a href="map.html">{{deployment.name}}</a></li>
            <li><a href="settings.html">Settings</a></li>
        </ol>

        <h1 class="mode-context-title">Export</h1>
    </header>

    <span class="mode-context-trigger">
        <svg class="iconic">
            <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
        </svg>
        <span class="label hidden">Show more/less</span>
    </span>

    <div class="mode-context-body">

    </div>
</div>

    <main role="main">
        <div class="main-col">
            <!-- note, class export-options below is only needed for PL-functionality, not needed in client -->
            <div class="form-sheet export-options">
                <div class="form-sheet-summary">
                    <h2 class="form-sheet-title">
                    Export data
                    </h2>
                    <!-- note, classes below is only needed for PL-functionality, not needed in client -->
                    <p class="description">Export all of your data as a CSV or choose specific survey fields you want to export.</p>
                    <p class="in-progress hidden">Export in progress...</p>
                </div>
                <div class="form-field">
                    <button class="button-alt" onclick="exportAll()">Export all data</button>
                    <button class="button" onclick="exportSelected()">Select fields</button>
                </div>
            </div>
        <!-- note, class export-selected below is only needed for PL-functionality, not needed in client -->
        <div class="form-sheet hidden export-selected">
            <div class="form-sheet-summary">
                <h2 class="form-sheet-title">
                Select fields to export...
                </h2>
                <p>If you don't want to export all of your data at once, you can select specific fields from each survey for export.</p>
            </div>
            <div class="form-field">
                <label>Survey 1</label>
                <div class="form-field checkbox">
                        <input type="checkbox" id="select-all">
                        <label for="select-all">
                            <em><span >Select All</span></em>
                        </label>
                    </label>
                </div>
                <div class="form-field checkbox">
                 {{> Checkbox label="Location" }}
                </div>
                <div class="form-field checkbox">
                  {{> Checkbox label="Title" }}
                </div>
                <div class="form-field checkbox">
                  {{> Checkbox label="Description" }}
                </div>
                <div class="form-field checkbox">
                  {{> Checkbox label="Categories" }}
                </div>
            </div>
            <div class="form-field">
                <label>Survey 2</label>
                <div class="form-field checkbox">
                    <input type="checkbox" id="select-all-2">
                    <label for="select-all-2">
                        <em><span >Select All</span></em>
                    </label>
                </div>
                <div class="form-field checkbox">
                  {{> Checkbox label="Title" }}
                </div>
                    <div class="form-field checkbox">
                        {{> Checkbox label="Description" }}
                </div>
                <div class="form-field checkbox">
                  {{> Checkbox label="Categories" }}
                </div>
                <div class="form-field checkbox">
                  {{> Checkbox label="Location" }}
                </div>
            </div>
            <div class="form-field">
                <label>Survey 3</label>
                <div class="form-field checkbox">
                    <input type="checkbox" id="select-all-3">
                    <label for="select-all-3">
                        <em><span >Select All</span></em>
                    </label>
                </div>
                <div class="form-field checkbox">
                  {{> Checkbox label="Title" }}
                </div>
                <div class="form-field checkbox">
                  {{> Checkbox label="Description" }}
                </div>
                <div class="form-field checkbox">
                  {{> Checkbox label="Number" }}
                </div>
                <div class="form-field checkbox">
                  {{> Checkbox label="Image" }}
                </div>
                <div class="form-field checkbox">
                  {{> Checkbox label="Markdown" }}
                </div>
                <div class="form-field checkbox">
                  {{> Checkbox label="Categories 2" }}
                </div>
            </div>
            <div class="form-field">
                <button class="button-alt">Export selected fields
                </button>
                <button class="button-destructive" onclick="exportSelected()">Cancel</button>
            </div>
        </div>
    </div>
</main>


{{> Modals }}
