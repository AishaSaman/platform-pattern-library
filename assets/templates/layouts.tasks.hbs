{{> ModeBar }}

<div class="mode-context">

    <header class="mode-context-header {{#if deployment.logo}}has-logo{{/if}}">
        <h1 class="mode-context-title"><a href="">{{deployment.name}}</a></h1>

        {{#if deployment.logo}}
            <img src="{{deployment.logo}}" class="deployment-logo" />
        {{/if}}
    </header>

    <span class="mode-context-trigger">
        <svg class="iconic">
            <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
        </svg>
        <span class="label hidden">Show more/less</span>
    </span>

    <div class="mode-context-body">
        {{{deployment.description}}}

        <div class="tool">
            <h6 class="tool-heading">Surveys</h6>

            <form class="survey-filter">
                {{#each deployment.surveys}}
                    {{#unless datasource}}
                        {{> SurveyFilterCheckbox tasks='true'}}
                    {{/unless}}
                {{/each}}
            </form>
        </div>

        {{#if user.logged_in}}
        <div class="tool">
            <h6 class="tool-heading">Data sources</h6>

            <form class="survey-filter">
                {{#each deployment.surveys}}
                    {{#if datasource}}
                        {{> SurveyFilterCheckbox}}
                    {{/if}}
                {{/each}}
            </form>
        </div>
        {{/if}}
    </div>
</div>

<main role="main">

    <div class="toolbar">
        {{> Search }}

        <div class="button-group">
            <button>
                <svg class="iconic">
                    <use xlink:href="../../img/iconic-sprite.svg#cog"></use>
                </svg>
                <span class="button-label hide-until-medium">Configure tasks</span>
            </button>
        </div>
    </div>

    <div class="main-col">

        <div class="listing">
            {{#each deployment.responses}}
                {{> Postcard checkbox=true show_tasks=true editable=true}}
            {{/each}}

            <div class="listing-toolbar">
                <div class="listing-toolbar-summary">
                    <strong><span class="total"></span> selected</strong>
                    <button class="button-link">Deselect</button>
                </div>

                <div class="listing-toolbar-actions">

                    <button class="button-beta" data-toggle="toggle-content">
                        <span class="button-label">Mark as</span>
                        <svg class="iconic">
                            <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
                        </svg>
                    </button>
                    <ul class="dropdown-menu toggle-content">
                        <li>
                            <a href="" data-message="publish-success">
                                Incomplete
                            </a>
                        </li>
                        <li>
                            <a href="" data-message="under_review-success">
                                <svg class="iconic">
                                    <use xlink:href="../../img/iconic-sprite.svg#check"></use>
                                </svg>
                                <span class="label">Complete</span>
                            </a>
                        </li>
                    </ul>

                    <button class="button-beta" data-modal="add-to-collection">
                        <svg class="iconic">
                            <use xlink:href="../../img/iconic-sprite.svg#person"></use>
                        </svg>
                        <span class="button-label hide-until-small">Change assignee</span>
                    </button>

                    <button class="button-beta">
                        <svg class="iconic">
                            <use xlink:href="../../img/iconic-sprite.svg#pencil"></use>
                        </svg>
                        <span class="button-label hide-until-small">Edit</span>
                    </button>

                    <button class="button-gamma">
                        <svg class="iconic">
                            <use xlink:href="../../img/iconic-sprite.svg#circle-x"></use>
                        </svg>
                        <span class="button-label hide-until-small">Remove task</span>
                    </button>
                </div>
            </div>
        </div>

        <div class="toolbox hide-until-small">
            <div class="tool">
                <h6 class="tool-heading">Assigned to</h6>

                <div class="toggle-content active">
                    <fieldset class="custom-fieldset">
                        <legend><span class="custom-fieldset-value"></span></legend>

                        <div class="form-field radio">
                            <label for="assigned-you">
                                <input type="radio" name="assigned" id="assigned-you" />
                                You
                            </label>
                        </div>

                        <div class="form-field radio">
                            <label for="assigned-anybody">
                                <input checked type="radio" name="assigned" id="assigned-anybody" />
                                Anybody
                            </label>
                        </div>

                        <div class="divider"></div>

                        <div class="form-field">
                            <a href="" data-modal="users">Specific person...</a>
                        </div>
                    </fieldset>
                </div>
            </div>

