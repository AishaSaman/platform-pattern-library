{{> ModeBar }}

<div class="mode-context">

    <header class="mode-context-header {{#if deployment.logo}}has-logo{{/if}}">
        <h1 class="mode-context-title"><a href="">{{deployment.name}}</a></h1>

        {{#if deployment.logo}}
            <img src="{{deployment.logo}}" class="deployment-logo" />
        {{/if}}
    </header>

    <span class="mode-context-trigger">
        <svg class="iconic">
            <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
        </svg>
        <span class="label hidden">Show more/less</span>
    </span>

    <div class="mode-context-body">
        {{{deployment.description}}}

        {{> SurveyFilter }}
    </div>
</div>

<main role="main">

    <div class="toolbar">

        <form role="search" class="searchbar" data-message="search">
            <div class="searchbar-input">
                <div class="form-field">
                    <label class="hidden">Search</label>
                    <div class="input-with-icon">
                        <input type="search" maxlength="250" placeholder="Search" value="" />
                        <svg class="iconic">
                          <use xlink:href="../../img/iconic-sprite.svg#magnifying-glass"></use>
                        </svg>
                    </div>
                </div>
                <div class="searchbar-results dropdown-menu">
                    <div class="form-field">
                        <button class="button-plain">
                            <span class="button-label">Search all tasks for "<em>Polic</em>"</span>
                        </button>
                    </div>

                    <div class="tool">
                        <h6 class="tool-heading">Suggestions</h6>
                        <dl class="dropdown-menu-body">
                            <dt class="list-item"><a href="#"><em>Polic</em>e</a></dt>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="searchbar-options">
                <a href="#" class="button searchbar-options-filter" data-toggle="search-filters">
                    <span class="button-label">Filters</span>
                    <svg class="iconic">
                      <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
                    </svg>
                </a>
            </div>

            <div class="dropdown-menu" data-toggle-target="search-filters" data-toggle-animate>
                <h4 class="dropdown-menu-title">Filter by...</h4>
                <div class="dropdown-menu-body">
                    <fieldset>
                        <legend>Assignee</legend>

                        <div class="form-field radio">
                            <label for="assigned-you">
                                <input checked type="radio" name="assigned" id="assigned-you" />
                                You
                            </label>
                        </div>

                        <div class="form-field radio">
                            <label for="assigned-anybody">
                                <input type="radio" name="assigned" id="assigned-anybody" />
                                Anybody
                            </label>
                        </div>

                        <div class="form-field radio">
                            <label for="assigned-nobody">
                                <input type="radio" name="assigned" id="assigned-nobody" />
                                Nobody
                            </label>
                        </div>

                        <div class="form-field radio">
                            <label for="assigned-members">
                                <input type="radio" name="assigned" id="assigned-members" />
                                Members
                            </label>
                        </div>

                        <div class="form-field radio">
                            <label for="assigned-editors">
                                <input type="radio" name="assigned" id="assigned-editors" />
                                Editors
                            </label>
                        </div>

                        <div class="form-field radio">
                            <label for="assigned-operators">
                                <input type="radio" name="assigned" id="assigned-operators" />
                                Operators
                            </label>
                        </div>

                        <div class="form-field radio">
                            <label for="assigned-admins">
                                <input type="radio" name="assigned" id="assigned-admins" />
                                Administrators
                            </label>
                        </div>

                        <span class="form-field-toggle">
                            <svg class="iconic">
                              <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
                            </svg>
                            More
                        </span>
                    </fieldset>

                    <fieldset>
                        <legend>Task status</legend>

                        <div class="form-field checkbox">
                            <label for="incomplete">
                                <input type="checkbox" id="incomplete">
                                Incomplete
                            </label>
                        </div>

                        <div class="form-field checkbox">
                            <label for="complete">
                                <input type="checkbox" id="complete" />
                                Complete
                            </label>
                        </div>
                    </fieldset>

                    <fieldset>
                        <legend>Status</legend>

                        <div class="form-field checkbox icon-input">
                            <label for="published">
                                <svg class="iconic">
                                    <use xlink:href="../../img/iconic-sprite.svg#globe"></use>
                                </svg>
                                <input type="checkbox" id="published">
                                Published
                            </label>
                        </div>

                        <div class="form-field checkbox icon-input">
                            <label for="review">
                                <svg class="iconic">
                                    <use xlink:href="../../img/iconic-sprite.svg#lock-locked"></use>
                                </svg>
                                <input type="checkbox" id="review" />
                                Under review
                            </label>
                        </div>

                        <div class="form-field checkbox icon-input">
                            <label for="archive">
                                <svg class="iconic">
                                    <use xlink:href="../../img/iconic-sprite.svg#box"></use>
                                </svg>
                                <input type="checkbox" id="archive" />
                                Archive
                            </label>
                        </div>

                        <span class="form-field-toggle">
                            <svg class="iconic">
                              <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
                            </svg>
                            More
                        </span>
                    </fieldset>

                    <fieldset>
                        <legend>Date range</legend>

                        <div class="form-field date">
                            <label class="hidden">Start date</label>
                            <div class="input-with-icon">
                                <svg class="iconic">
                                  <use xlink:href="../../img/iconic-sprite.svg#calendar"></use>
                                </svg>
                                <input type="date" placeholder="Start date" />
                            </div>
                            <span class="date-joiner">to</span>
                        </div>

                        <div class="form-field date">
                            <label class="hidden">End date</label>
                            <div class="input-with-icon">
                                <svg class="iconic">
                                  <use xlink:href="../../img/iconic-sprite.svg#calendar"></use>
                                </svg>
                                <input type="date" placeholder="End date" />
                            </div>
                        </div>

                    </fieldset>
                </div>

                <div class="form-field">
                    <button type="button" class="button-link" disabled>Cancel</button>
                    <button type="button" class="button-alpha" disabled>Apply filters</button>
                </div>
            </div>
        </form>

    </div>

    <div class="main-col">

        <div class="toolbox">

            <div class="tool">
                <h6 class="tool-heading">Sort by</h6>

                <span class="tool-trigger" data-toggle="toggle-content">
                    <svg class="iconic">
                        <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
                    </svg>
                    <span class="label hidden">Show/hide</span>
                </span>

                <div class="toggle-content active">
                    <fieldset>
                        <legend class="hidden">Sort by</legend>

                        <div class="form-field radio">
                            <label for="sortby-postdate">
                                <input checked type="radio" name="sortby" id="sortby-postdate">
                                Post date
                            </label>
                        </div>

                        <div class="form-field radio">
                            <label for="sortby-duedate">
                                <input type="radio" name="sortby" id="sortby-duedate">
                                Due date
                            </label>
                        </div>

                        <div class="form-field radio">
                            <label for="sortby-type">
                                <input type="radio" name="sortby" id="sortby-type">
                                Type of task
                            </label>
                        </div>

                        <div class="form-field radio">
                            <label for="sortby-proximity">
                                <input type="radio" name="sortby" id="sortby-proximity">
                                Proximity to your current location
                            </label>
                        </div>
                    </fieldset>
                </div>
            </div>

            <div class="tool">
                <h6 class="tool-heading">Assigned to</h6>

                <div class="toggle-content active">
                    <fieldset class="custom-fieldset">
                        <legend><span class="custom-fieldset-value"></span></legend>

                        <div class="form-field radio">
                            <label for="assigned-you">
                                <input checked type="radio" name="assigned" id="assigned-you" />
                                You
                            </label>
                        </div>

                        <div class="form-field radio">
                            <label for="assigned-anybody">
                                <input type="radio" name="assigned" id="assigned-anybody" />
                                Anybody
                            </label>
                        </div>

                        <div class="form-field radio">
                            <label for="assigned-nobody">
                                <input type="radio" name="assigned" id="assigned-nobody" />
                                Nobody
                            </label>
                        </div>

                        <div class="divider"></div>

                        <div class="form-field">
                            <a href="" data-modal="users">Specific person...</a>
                        </div>
                    </fieldset>
                </div>
            </div>

            <div class="tool">
                <h6 class="tool-heading">Task Status</h6>

                <span class="tool-trigger" data-toggle="toggle-content">
                    <svg class="iconic">
                        <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
                    </svg>
                    <span class="label hidden">Show/hide</span>
                </span>

                <div class="toggle-content active">
                    <fieldset>
                        <legend class="hidden">Task status</legend>

                        <div class="form-field checkbox">
                            <label for="incomplete">
                                <input checked type="checkbox" id="incomplete">
                                Incomplete
                            </label>
                        </div>

                        <div class="form-field checkbox">
                            <label for="complete">
                                <input type="checkbox" id="complete" />
                                Complete
                            </label>
                        </div>
                    </fieldset>
                </div>
            </div>

            <div class="tool">
                <h6 class="tool-heading">Post status</h6>

                <span class="tool-trigger" data-toggle="toggle-content">
                    <svg class="iconic">
                        <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
                    </svg>
                    <span class="label hidden">Show/hide</span>
                </span>

                <div class="toggle-content">
                    <fieldset>
                        <legend class="hidden">Status</legend>

                        <div class="form-field checkbox icon-input">
                            <label for="published">
                                <svg class="iconic">
                                    <use xlink:href="../../img/iconic-sprite.svg#globe"></use>
                                </svg>
                                <input checked type="checkbox" id="published">
                                Published
                            </label>
                        </div>

                        <div class="form-field checkbox icon-input">
                            <label for="review">
                                <svg class="iconic">
                                    <use xlink:href="../../img/iconic-sprite.svg#lock-locked"></use>
                                </svg>
                                <input checked type="checkbox" id="review" />
                                Under review
                            </label>
                        </div>

                        <div class="form-field checkbox icon-input">
                            <label for="archive">
                                <svg class="iconic">
                                    <use xlink:href="../../img/iconic-sprite.svg#box"></use>
                                </svg>
                                <input checked type="checkbox" id="archive" />
                                Archive
                            </label>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>

        <div class="listing">

            {{#each deployment.responses}}
                {{#if tasks}}
                    {{> Postcard checkbox=false show_tasks=true}}
                {{/if}}
            {{/each}}

            <div class="listing-item">
                <div class="listing-item-primary">
                    <button class="button-gamma button-flat">Load more</button>
                </div>
            </div>

            <div class="listing-toolbar">
                <div class="listing-toolbar-summary">
                    <strong><span class="total"></span> selected</strong>
                    <button class="button-link">Deselect</button>
                </div>

                <div class="listing-toolbar-actions">

                    <button class="button-beta" data-toggle="toggle-content">
                        <span class="button-label">Mark as</span>
                        <svg class="iconic">
                            <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
                        </svg>
                    </button>
                    <ul class="dropdown-menu toggle-content">
                        <li>
                            <a href="">Complete</a>
                        </li>
                        <li>
                            <a href="">Incomplete</a>
                        </li>
                    </ul>

                    <button class="button-beta" data-toggle="toggle-content">
                        <span class="button-label">Assign to</span>
                        <svg class="iconic">
                            <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
                        </svg>
                    </button>
                    <ul class="dropdown-menu toggle-content">
                        <li>
                            <a href="">You</a>
                        </li>
                        <li>
                            <a href="">Nobody</a>
                        </li>
                        <div class="divider"></div>
                        <li>
                            <a href="" data-modal="users">Specific person...</a>
                        </li>
                    </ul>

                    <button type="button" class="listing-toolbar-toggle more">
                        <svg class="iconic">
                            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="../../img/iconic-sprite.svg#ellipses"></use>
                        </svg>
                        <span class="button-label">Show more</span>
                    </button>

                    <button type="button" class="listing-toolbar-toggle less">
                        <svg class="iconic">
                            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="../../img/iconic-sprite.svg#x"></use>
                        </svg>
                        <span class="button-label">Show less</span>
                    </button>
                </div>
            </div>

        </div>

    </div>

</main>

{{> Modals }}
