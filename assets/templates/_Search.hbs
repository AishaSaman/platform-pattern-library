<form role="search" class="searchbar" data-message="search">
    <div class="searchbar-input">
        <div class="form-field">
            <label class="hidden">Search</label>
            <div class="input-with-icon input-with-ghost">
                <input type="search" maxlength="250" placeholder="Search" value="" />
                <div class="input-ghost"></div>
                <svg class="iconic">
                    <use xlink:href="../../img/iconic-sprite.svg#magnifying-glass"></use>
                </svg>
            </div>
        </div>
        <div class="searchbar-results dropdown-menu">
            <div class="form-field">
                <button class="button-plain" search-string>Search all posts for <em>keyword</em></button>
            </div>

            <!-- IF: LOADING SEARCH SUGGESTIONS //
            <div class="loading">
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
            </div>
            // END IF -->

            <div class="tool">
                <h6 class="tool-heading">Suggestions</h6>
                <dl class="dropdown-menu-body">
                    <dt class="list-item"><a href="#"><em>Polic</em>e</a></dt>
                </dl>
            </div>

            <div class="tool">
                <h6 class="tool-heading">
                    <svg class="iconic">
                      <use xlink:href="../../img/iconic-sprite.svg#star"></use>
                    </svg>
                    Saved
                </h6>
                <dl class="dropdown-menu-body">
                    <dt class="list-item"><a href="#">City <em>Polic</em>e Hearings</a></dt>
                    <dt class="list-item"><a href="#">Incidents involving <em>Polic</em>e</a></dt>
                </dl>
            </div>
        </div>
    </div>

    <div class="searchbar-options">
        <a href="#" class="button" data-toggle="search-saved">
            <svg class="iconic">
              <use xlink:href="../../img/iconic-sprite.svg#star"></use>
            </svg>
            <span class="button-label hidden">Saved</span>
        </a>

        <a href="#" class="button searchbar-options-filter" data-toggle="search-filters">
            <span class="button-label">Filters</span>
            <svg class="iconic">
              <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
            </svg>
        </a>
    </div>

    <div class="dropdown-menu" data-toggle-target="search-saved" data-toggle-animate>
        <h4 class="dropdown-menu-title">Saved Searches</h4>

        <div class="form-field">
            <label class="hidden">Find a saved search</label>
            <div class="input-with-icon">
                <svg class="iconic">
                  <use xlink:href="../../img/iconic-sprite.svg#magnifying-glass"></use>
                </svg>
                <input type="search" placeholder="Find a saved search...">
            </div>
        </div>
        <dl class="dropdown-menu-body">
            <dt class="list-item"><a href="map-saved.html">Actions on Congress Avenue</a></dt>

            <dt class="list-item"><a href="#">Photos</a></dt>

            <dt class="list-item"><a href="#">Reports on Wednesday</a></dt>

            <dt class="list-item"><a href="#">Assigned to me</a></dt>

            <dt class="list-item"><a href="#">Unknown form with attachment</a></dt>
            <dd>by <a href="">Robbie MacKay</a></dd>

            <dt class="list-item"><a href="#">Unknown form with attachment</a></dt>
            <dd>by <a href="">Robbie MacKay</a></dd>

            <dt class="list-item"><a href="#">Unknown form with attachment</a></dt>
            <dd>by <a href="">Robbie MacKay</a></dd>

            <dt class="list-item"><a href="#">Unknown form with attachment</a></dt>
            <dd>by <a href="">Robbie MacKay</a></dd>
        </dl>
        <div class="form-field">
            <button type="button" class="button-beta">
                <svg class="iconic">
                  <use xlink:href="../../img/iconic-sprite.svg#plus"></use>
                </svg>
                <span class="button-label">Create new</span>
            </button>
        </div>
    </div>

    <div class="dropdown-menu" data-toggle-target="search-filters" data-toggle-animate>
        <h4 class="dropdown-menu-title">Filter by...</h4>
        <div class="dropdown-menu-body">
            <fieldset>
                <legend>Survey</legend>

                {{#each deployment.surveys}}
                <div class="form-field checkbox">
                    <label>
                        <input type="checkbox">
                        {{name}}
                    </label>
                </div>
                {{/each}}

                {{#if user.logged_in}}
                <div class="form-field checkbox">
                    <label for="protester-photos">
                        <input type="checkbox" name="unknown">
                        Unknown
                    </label>
                </div>
                {{/if}}
                <span class="form-field-toggle">
                    <svg class="iconic">
                      <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
                    </svg>
                    More
                </span>
            </fieldset>

            <fieldset>
                <legend>Stage</legend>

                {{#if user.logged_in}}
                <div class="form-field checkbox">
                    <label for="stage-review">
                        <input type="checkbox" id="stage-review" />
                        Review
                    </label>
                </div>

                <div class="form-field checkbox">
                    <label for="stage-investigate">
                        <input type="checkbox" id="stage-investigate" />
                        Investigate
                    </label>
                </div>

                <div class="form-field checkbox">
                    <label for="stage-contact_department">
                        <input type="checkbox" id="stage-contact_department" />
                        Contact department
                    </label>
                </div>
                {{/if}}

                <div class="form-field checkbox">
                    <label for="stage-resolved">
                        <input checked type="checkbox" id="stage-resolved" />
                        Resolved
                    </label>
                </div>

                <span class="form-field-toggle">
                    <svg class="iconic">
                      <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
                    </svg>
                    More
                </span>
            </fieldset>

            <fieldset>
                <legend>Categories</legend>

                <div class="form-field checkbox">
                    <label for="speakers">
                        <input checked type="checkbox" id="speakers" /> Surface issues
                    </label>
                </div>
                <div class="form-field checkbox">
                    <label for="opposition">
                        <input type="checkbox" id="opposition" /> Signage
                    </label>
                </div>
                <div class="form-field checkbox">
                    <label for="obstructions">
                        <input type="checkbox" id="obstructions" /> Obstructions
                    </label>
                </div>
                <span class="form-field-toggle">
                    <svg class="iconic">
                      <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
                    </svg>
                    More
                </span>
            </fieldset>

            <fieldset>
                <legend>Data Source</legend>

                <div class="form-field checkbox">
                    <label for="sms">
                        <input type="checkbox" id="sms" />
                        SMS
                    </label>
                </div>
                <div class="form-field checkbox">
                    <label for="email">
                        <input type="checkbox" id="email" />
                        Email
                    </label>
                </div>
                <div class="form-field checkbox">
                    <label for="twitter">
                        <input type="checkbox" id="twitter" />
                        Twitter
                    </label>
                </div>
                <span class="form-field-toggle">
                    <svg class="iconic">
                      <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
                    </svg>
                    More
                </span>
            </fieldset>

            <fieldset>
                <legend>Date range</legend>

                <div class="form-field date">
                    <label class="hidden">Start date</label>
                    <div class="input-with-icon">
                        <svg class="iconic">
                          <use xlink:href="../../img/iconic-sprite.svg#calendar"></use>
                        </svg>
                        <input type="date" placeholder="Start date" />
                    </div>
                    <span class="date-joiner">to</span>
                </div>

                <div class="form-field date">
                    <label class="hidden">End date</label>
                    <div class="input-with-icon">
                        <svg class="iconic">
                          <use xlink:href="../../img/iconic-sprite.svg#calendar"></use>
                        </svg>
                        <input type="date" placeholder="End date" />
                    </div>
                </div>

            </fieldset>

            <fieldset>
                <legend>Location</legend>

                <div class="form-field">
                    <label class="hidden">Address</label>
                    <div class="input-with-icon">
                        <svg class="iconic">
                          <use xlink:href="../../img/iconic-sprite.svg#location"></use>
                        </svg>
                        <input type="text" placeholder="123 Main Street" />
                    </div>
                </div>

                <div class="form-field">
                    <label class="hidden">Range</label>
                    <div class="custom-select">
                        <select>
                            <option>within 1 km</option>
                            <option>within 10 km</option>
                            <option>within 50 km</option>
                        </select>
                    </div>
                </div>

            </fieldset>
        </div>

        <div class="form-field">
            <button class="button-link" disabled>Cancel</button>
            <button class="button-alpha" disabled>Apply filters</button>
        </div>
    </div>
</form>
